---
import type { Playlist } from '@/lib/data'
import { globalContentConfigObserver } from 'node_modules/astro/dist/content/utils'

interface Props {
  playlist: Playlist
}

const { playlist } = Astro.props

const { id, cover, title, artists, albumId, color } = playlist

const artistsString = artists.join(', ')
---

<a
  href={`/playlist/${id}`}
  class="playlist-item flex relative p-2 overflow-hidden items-center gap-5 rounded-md hover:bg-zinc-500"
>
  <picture class="h-12 w-12 flex-none">
    <img src={cover != '' ? cover : '/assets/default-cover.png'} />
  </picture>
</a>
